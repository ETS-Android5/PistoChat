<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SendOtp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/send"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We will send you a one time otp on this given mobile number"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Mobile number"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"
                />

            <LinearLayout
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/bgbox"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    />

                <!--            <EditText-->
                <!--                android:id="@+id/countryCode"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="91"-->
                <!--                android:textStyle="bold"-->
                <!--                android:inputType="number"-->
                <!--                android:textColor="@color/colorTextFirst"-->
                <!--                />-->

                <EditText
                    android:layout_width="120dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:hint=""
                    android:background="@null"
                    android:maxLength="10"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/send"
                android:layout_marginTop="20dp"
                android:text="send"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellowTint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/pg1"
                android:visibility="invisible"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>